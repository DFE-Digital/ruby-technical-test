<tr class="govuk-table__row providers__row">
  <td class="govuk-table__cell providers__name">
    <%= provider.name %>
  </td>
  <td class="govuk-table__cell providers__trainees-count">
    <%= provider.trainees.count %> trainees<br/>
    <%- if provider.trainees.any? -%>
      Last trainee added: <%= provider.newest_trainee.created_at.strftime("%d/%m/%Y") %>
  <%- end -%>
  </td>
</tr>
