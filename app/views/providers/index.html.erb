<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">
    <h1 class="govuk-heading-xl">Providers</h1>
  </div>
</div>

<div class="govuk-grid-row">
  <div class="govuk-grid-column-full">

    <p class="govuk-body">
      <%= link_to "Add Provider", new_provider_path , { class:"govuk-button", data: { module: "govuk-button" } } %>
    </p>

    <table class="govuk-table providers">
      <%- @providers.each do |provider| -%>
        <%= render partial: "provider_row", locals: { provider: provider } %>
      <%- end -%>
    </table>
  </div>
</div>
